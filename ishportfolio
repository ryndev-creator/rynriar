    <script>
        // View count functionality
        let views = localStorage.getItem('pageViews') || 0;
        views = parseInt(views) + 1;
        localStorage.setItem('pageViews', views);
        document.getElementById('viewCount').textContent = `Views: ${views}`;

        function createSnowflake() {
            const snowflake = document.createElement('div');
            snowflake.classList.add('snowflake');
            const symbols = ['❄', '❅', '❆', '✧', '✦'];
            snowflake.innerHTML = symbols[Math.floor(Math.random() * symbols.length)];
            snowflake.style.left = Math.random() * 100 + 'vw';
            snowflake.style.animationDuration = Math.random() * 3 + 2 + 's';
            snowflake.style.opacity = Math.random() * 0.5 + 0.3;
            snowflake.style.transform = `scale(${Math.random() * 0.5 + 0.5})`;
            document.body.appendChild(snowflake);

            setTimeout(() => {
                snowflake.remove();
            }, 5000);
        }

        setInterval(createSnowflake, 50);

        function playClickAndShowTab(tabId) {
            document.getElementById('clickSound').play();
            showTab(tabId);
        }

        function showTab(tabId) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });

            // Show selected tab
            document.getElementById(tabId).classList.add('active');
            document.querySelector(`button[onclick="playClickAndShowTab('${tabId}')"]`).classList.add('active');
        }
    </script>
</body>
